<Application x:Class="WPF_MVVM.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_MVVM"
             xmlns:bnd ="clr-namespace:WPF_MVVM.Infrastructure.Commands"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
         <bnd:CloseApplicationCommand x:Key ="CloseApplicationResourcesInApp"/>

         <Style TargetType="Button" x:Key="BtnBase">
            <Setter Property="Background" Value="CornflowerBlue"></Setter>
         </Style>

         <Style TargetType="Button" x:Key ="PrimaryBtn" BasedOn="{StaticResource BtnBase}">
            <Setter Property="FontWeight" Value="Bold"/>
         </Style>

         <Style TargetType="Button" x:Key ="DangerBtn">
             <Setter Property="Background" Value="Red"/>
             <Setter Property="Foreground" Value="White"/>
         </Style>

    </Application.Resources>
</Application>
